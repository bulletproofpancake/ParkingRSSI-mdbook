<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ScanRouterFragment"
    android:layout_margin="8dp">

    <LinearLayout
        android:id="@+id/ll_dimension"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/dimension" />

        <EditText
            android:id="@+id/et_row"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:autofillHints="Row"
            android:ems="10"
            android:text="@string/three"
            android:hint="@string/row"
            android:inputType="numberSigned"
            android:textAlignment="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cross" />

        <EditText
            android:id="@+id/et_col"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:autofillHints="Column"
            android:ems="10"
            android:text="@string/two"
            android:hint="@string/col"
            android:inputType="numberSigned"
            android:textAlignment="center" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_set_matrix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/set_router_matrix"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_dimension" />

    <GridLayout
        android:id="@+id/gl_router_matrix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:columnCount="2"
        android:rowCount="3"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_set_matrix">

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@color/purple_500" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@color/teal_200" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@color/teal_200" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@color/purple_500" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@color/purple_500" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@color/teal_200" />

    </GridLayout>

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btn_scan_routers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gl_router_matrix">

        <LinearLayout
            android:id="@+id/ll_routers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_router" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_router" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_router" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_router" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_router" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_router" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_router" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_router" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_router" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_router" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_router" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_router" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_router" />

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/btn_scan_routers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gl_router_matrix"
        android:maxHeight="96dp"
        android:maxWidth="96dp"
        android:minHeight="96dp"
        android:minWidth="96dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_scan_routers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/scan_routers"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>